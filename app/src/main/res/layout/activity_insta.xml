<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/tag_a_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_a_photo" />

    <Button
        android:id="@+id/see_tagged_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_tagged_photos" />

    <Button
        android:id="@+id/see_some_ones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/someones" />

    <Button
        android:id="@+id/drag_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drag_test" />

</LinearLayout>
