<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainframe"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tagfeature.instatag.ArrowView
            android:id="@+id/indicator_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:rotation="180" />

        <LinearLayout
            android:layout_marginTop="-2dp"
            android:id="@+id/indicator_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tag_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="50"
                android:background="#000"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Hemant Sharma"
                android:minWidth="12dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:textColor="#FFF"
                android:textSize="13sp" />

        </LinearLayout>

        <com.tagfeature.instatag.ArrowView
            android:id="@+id/indicator_arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-2dp"
            android:visibility="gone" />

    </LinearLayout>

    <com.tagfeature.instatag.TagImageView
        android:id="@+id/remove_tag_image_view"
        android:layout_width="@dimen/dp18"
        android:layout_height="@dimen/dp18"
        android:layout_gravity="center_horizontal|end"
        android:background="@drawable/ic_remove_tag"
        android:visibility="gone" />

</FrameLayout>
